
<div class="banner-bookings">
  <h2>Vos réservations, Capitaine</h2>
</div>

<div class="container">
  <!-- Card booking -->
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-md-4">
          <div class="card-container">
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= booking.place.port.picture %>');">
            </div>
            <div class="price">
              <i class="fa fa-tag"></i>
              <h5> <%= booking.invoiced_price %> €</h5>
            </div>
            <div class="card-description">
              <div class="row">
                <div class="col-xs-6">
                  <h6>Date d'arrivée</h6>
                  <p><%= booking.arrival_date.strftime ("%d/%m/%Y") %></p>
                </div>
                <div class="col-xs-6">
                  <h6>Date de départ</h6>
                  <p><%= booking.departure_date.strftime ("%d/%m/%Y") %></p>
                </div>
                <div class="col-xs-12">
                  <h6>Commentaire:</h6>
                  <p><%= booking.comment %></p>
                </div>
              </div>
            </div>
            <div class="card-btn">
              <%= link_to "delete", booking_path(booking), method: :delete, data: { confirm: "Are your sure to delete this booking ?"}, class: "btn" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>





