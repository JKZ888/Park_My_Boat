<%= simple_form_for(@boat) do |f| %>
  <%= f.error_notification %>
  <%= f.input :immatriculation, placeholder: "AFR654684ERB", label:'votre immatriculation' %>
  <%= f.input :nickname, placeholder: "LABrigitte", label:'Le nom de votre bateau'  %>
  <%= f.input :brand, placeholder: "Feadship", label:'La marque'  %>
  <%= f.input :manufacturer, placeholder: "Luxury For You", label:'le Fabricant'  %>
  <%= f.input :model, placeholder: "Model", label:'le model'  %>
  <%= f.input :boat_type, collection: ["Voilier", "Moteur"], placeholder: "Voilier ou Moteur ?", label:'le type'  %>
  <%= f.input :length, placeholder: "12 (meter)", label:'longueur'  %>
  <%= f.input :width, placeholder: "18 (meter)", label:'largeur'  %>
  <%= f.input :draught, placeholder: "4 (meter)", label:"tirant d'eau"  %>
  <%= f.input :multihull, as: :radio_buttons, label:'multicoque ?'  %>
  <%= f.submit %>
<% end %>

